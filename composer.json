{
    "name": "mnemesong/microwidget",
    "description": "micro-widgets realization",
    "type": "library",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mnemesong\\Microwidget\\": "src/",
            "Mnemesong\\MicrowidgetTestUnit\\": "test-unit/",
            "Mnemesong\\MicrowidgetStubs\\": "stubs/"
        }
    },
    "authors": [
        {
            "name": "Pantagruel74",
            "email": "tostar74@mail.ru"
        }
    ],
    "scripts": {
        "test:unit": "phpunit test-unit",
        "lint:src": "phpstan analyse src --level 9",
        "lint:unit": "phpstan analyse test-unit --level 9",
        "lint:stubs": "phpstan analyse stubs --level 9"
    },
    "minimum-stability": "stable"
}
